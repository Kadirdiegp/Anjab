rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             (exists(/databases/$(database)/documents/admins/$(request.auth.uid)) ||
              request.auth.token.email == 'anja@haarambiente.de');
    }
    
    // Bookings collection rules
    match /bookings/{bookingId} {
      // Allow read access to authenticated users
      allow read: if request.auth != null;
      
      // Allow write access only to admins
      allow write: if isAdmin();
      
      // Allow create access to any authenticated user
      allow create: if request.auth != null;
    }
    
    // Admins collection rules
    match /admins/{adminId} {
      // Allow initial creation for Anja
      allow create: if request.auth != null && 
                   request.auth.token.email == 'anja@haarambiente.de' && 
                   adminId == request.auth.uid;
      
      // Allow read/write for admins
      allow read, write: if isAdmin();
    }
  }
}
